@model JLT.Floorplan.Entity.CurrentLogedInUser
@{
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}


<div class="container w-xxl w-auto-xs">
    <a href class="navbar-brand block m-t">JLT India Seat Management</a>
    <div class="m-b-lg">
        <div class="wrapper text-center">
            <strong>Sign in to the application</strong>
        </div>
        @using (Ajax.BeginForm("Login", "Account", FormMethod.Post, null, new { name = "form", @class = "form-validation" }))
        {
            @Html.AntiForgeryToken()
            <div class="text-danger wrapper text-center">@ViewBag.Error</div>
            <div class="list-group list-group-sm">
                <div class="list-group-item">
                    @Html.TextBoxFor(t => t.userid, null, new { type = "text", @class = "form-control no-border", placeholder = "UserID", required = "required" })
                </div>
                <div class="list-group-item">
                    @Html.TextBoxFor(t => t.password, null, new { type = "password", @class = "form-control no-border", placeholder = "Password", required = "required" })
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>
            <div class="text-center m-t m-b"><a href="#">Forgot password?</a></div>
            <div class="line line-dashed"></div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#userid').focus();
        $('#password').val('');
    });
</script>



